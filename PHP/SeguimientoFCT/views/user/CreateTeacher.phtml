<h2>Crear Profesor</h2>
<div class="form-container">
    <form method="post" action="index.php" enctype="multipart/form-data">
        <!-- Datos ocultos para identificar la acción y controlador -->
        <input type="hidden" name="controller" value="user">
        <input type="hidden" name="action" value="saveTeacher">

        <!-- Nombre de usuario -->
        <label for="username">Nombre de usuario:</label>
        <input type="text" id="username" name="username" placeholder="Ingrese el nombre de usuario" required>

        <!-- Correo electrónico -->
        <label for="email">Correo electrónico:</label>
        <input type="email" id="email" name="email" placeholder="Ingrese el correo electrónico" required>

        <!-- Contraseña -->
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" placeholder="Ingrese la contraseña" required>

        <!-- Biografía -->
        <label for="bio">Biografía:</label>
        <textarea id="bio" name="bio" placeholder="Escriba una breve biografía"></textarea>

        <!-- Subir avatar -->
        <label for="avatar">Avatar:</label>
        <input type="file" id="avatar" name="avatar" accept="image/*">

        <!-- Botones de acción -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Guardar Profesor</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='index.php';">Volver</button>
        </div>
    </form>
</div>
